from config import SETTINGS, log
from modules import bank, upgrade

def auto_bank_or_spend(current_spice):
    if SETTINGS["RESOURCE_AUTOBANK"] and current_spice > SETTINGS["RESOURCE_AUTOSAVE_THRESHOLD"]:
        log.info(f"Auto banking {current_spice} spice (above save threshold)")
        bank.run(None, current_spice)
    if SETTINGS["RESOURCE_AUTOSPEND"] and current_spice < SETTINGS["RESOURCE_AUTOSAVE_THRESHOLD"]:
        log.info(f"Auto spending {current_spice} spice (below save threshold)")
        upgrade.run(None, current_spice)
